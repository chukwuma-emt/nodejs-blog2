<div class="auther">
    <h1 class="auther__heading"> Hi I am Chukwuma</h1>
    <p class="auther__body">web developer and computer scientist.</p>
    
</div>

<img src="/img/hero-image.jpg" alt="person looking out through window" class="hero-image" width="981" height="528">

<section class="articles">
    <h2 class="articles__heading"> Latest Post</h2>

    <ul class="article-ul">

        <% data.forEach(post => { %>
         
        
        <li>
            <a href="/post/<%= post._id %>"
                <span ><%= post.title %></span>
                <span class="article-list_date"><%= post.createdAt.toDateString() %></span>
            </a>
        </li>
        <% }) %>
    </ul>

    <% if (nextPage !== null) { %>
     <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
    <% } %>

    

</section>